@model VisaCenterBackend.Controllers.LoginViewModel
<!DOCTYPE html>
<html>
<head>
    <title>Admin</title>
    <meta charset="utf-8" />
</head>
<body>
    <h2>Login</h2>
    <a asp-controller="Employee" asp-action="Index">Перейти к сотруднику</a>
    <a asp-controller="Student" asp-action="Index">Перейти к студенту</a>

    <form asp-controller="Admin" , asp-action="Login" method="post">
        <input hidden asp-for="ReturnUrl" />
        <div>
            <label>Login</label>
            <input asp-for="Login" />
            <span asp-validation-for="Login"></span>
        </div>
        <div>
            <label>Password</label>
            <input type="Password" name="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <p>
            <button type="submite">Log in</button>
        </p>
    </form>
</body>
</html>