{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.build.json",
    "watchAssets": true,
    "assets": [
      {
        "include": "email/templates/*",
        "outDir": "dist"
      },
      {
        "include": "email/assets/*",
        "outDir": "dist"
      },
      {
        "include": "api/visa-request/templates/*",
        "outDir": "dist"
      }
    ]
  },
  "generateOptions": {
    "spec": false
  }
}
